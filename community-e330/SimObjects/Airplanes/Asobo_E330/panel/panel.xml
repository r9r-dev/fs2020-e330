							<Unit>MAN IN</Unit>
							<Minimum>0</Minimum>
							<Maximum>40</Maximum>
							<Style>
								<BeginAngle>-45</BeginAngle>
								<EndAngle>180</EndAngle>
								<ValuePos>End</ValuePos>
								<CursorType>Triangle</CursorType>
							</Style>
							<Value>
								<Simvar name="RECIP ENG MANIFOLD PRESSURE:1" unit="inHG"/>
							</Value>
							<ColorZone>
								<Color>white</Color>
								<Begin>0</Begin>
								<End>40</End>
							</ColorZone>
							<ColorZone>
								<Color>green</Color>
								<Begin>10</Begin>
								<End>30</End>
							</ColorZone>
							<BeginText></BeginText>
							<EndText></EndText>
						</Gauge>
					</Column>
					<Column>
						<Gauge>
							<Type>Circular</Type>
							<ID>RPM_Gauge</ID>
							<Unit>RPM</Unit>
							<Minimum>0</Minimum>
							<Maximum>2800</Maximum>
							<Style>
								<BeginAngle>-45</BeginAngle>
								<EndAngle>180</EndAngle>
								<ValuePos>End</ValuePos>
								<CursorType>Triangle</CursorType>
